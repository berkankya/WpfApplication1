<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>

                <GradientStop Color="Violet" Offset="0" />
                <GradientStop Color="Aqua" Offset="0.5" />
                <GradientStop Color="Black" Offset="1" />

            </LinearGradientBrush>
            
        </Grid.Background>

        <Button Name="btnTikla" Width="100" Height="30" Content="Deneme" Click="btnTikla_Click" Background="#FF00FF73" Foreground="#FF250404" BorderBrush="Black"/>

    </Grid>
</Window>
